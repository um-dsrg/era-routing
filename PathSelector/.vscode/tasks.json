{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PathSelector - Configure Debug",
      "type": "shell",
      "group": "build",
      "command": "/usr/local/bin/cmake",
      "args": [
        "-Bbuild/debug",
        "-G'Unix Makefiles'",
        "-DCMAKE_BUILD_TYPE=Debug"
      ],
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "PathSelector - Build Debug",
      "type": "shell",
      "group": "build",
      "command": "make -j 8",
      "options": {
        "cwd": "${workspaceRoot}/build/debug"
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}
